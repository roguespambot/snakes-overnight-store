<h1>SnakesOvernight.com</h1>
<p class="tagline">The hottest snakes, shipped to you overnight!</p>

<h3>Our Products</h3>
  <% @products.each do |product| %>
  <div class="product_listing">
  <%= link_to image_tag(product.photo.url(:thumb)), product_path(product.id)%><br />
    <div class="product_text">
      <%= link_to product.name, product_path(product) %><br />
      <%= number_to_currency(product.price) %>
    </div>
  </div>
  <% end %>

